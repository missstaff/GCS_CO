@model IEnumerable<GCS_CO.Models.State>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StateAbbrev)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Region)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StateAbbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region.RegionAbbrev)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StateId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StateId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

